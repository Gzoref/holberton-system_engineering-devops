

#!/usr/bin/env bash
apt-get -y update
apt-get -y install nginx
echo "Ceci n'est pas une page" | sudo /var/www/html/404.html
sed -i "/server_name server2;/ a\\\trewrite ^/redirect_me// https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent;" /etc/nginx/sites-available/default
sed -i "/redirect_me/ a\\\terror_page 404 /custom_404.html;" /etc/nginx/sites-available/default
service nginx start
